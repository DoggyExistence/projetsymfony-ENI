{% extends 'base.html.twig' %}

{% block title %}
    Créer un Utilisateur
{% endblock %}

{% block main %}
    <div class="container">
        <h1 class="my-4 text-center">Créer un nouvel utilisateur</h1>
        <div class="row col-10 mx-auto">
            <div class="mt-3">
                {{ form_start(formUtilisateur) }}
                {{ form_widget(formUtilisateur) }}
                <input type="hidden" name="_token" value="{{ csrf_token('_token') }}"/>
                <div>
                    <button type="submit" class="btn btn-primary ">Enregistrer</button>
                    <a href="{{ path('admin_dashboard') }}" class="btn btn-primary">Annuler</a>
                </div>
                {{ form_end(formUtilisateur) }}
            </div>
        </div>
    </div>
{% endblock %}

