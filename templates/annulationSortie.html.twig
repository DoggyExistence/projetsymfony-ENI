{% extends 'base.html.twig' %}

{% block main %}

    <h1 class="text-center">Annuler la sortie</h1>

    <div>
        <p>Nom de la sortie :  {{ sortie.nom }}</p>
        <p>Date de la sortie : {{ sortie.dateHeureDebut | date('d/m/Y') }}</p>
        <p>Site organisateur : {{ sortie.site.nom }}</p>
        <p>Lieu de la sortie : {{ sortie.lieu.nom }}</p>
    </div>


    {{ form_start(formAnnulation) }}
    {{ form_widget(formAnnulation) }}
    <div class="centrer-element">
        <button type="submit" class="btn btn-primary me-2">Valider</button>
    {{ form_end(formAnnulation) }}

    <a href="{{ path('sortie_detail', {'id' : sortie.id}) }}"
       class="btn btn-primary me-2">Annuler</a>
    </div>

{% endblock %}

{% block title %}
    Annulation de la sortie
{% endblock %}

